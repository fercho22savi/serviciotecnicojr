rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow get: if request.auth.uid == userId;
      allow list: if isAdmin();
      allow update: if request.auth.uid == userId || isAdmin();
      allow create: if isAdmin();
    }

    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }

    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();

      // Rules for the reviews subcollection
      match /reviews/{reviewId} {
        allow read, list: if true; // Everybody can read reviews
        allow create: if request.auth.uid != null; // Authenticated users can create reviews
        allow update, delete: if isAdmin(); // Only admins can change status or delete
      }
    }

    match /categories/{categoryId} {
      allow read, create, update, delete: if isAdmin();
    }

    match /orders/{orderId} {
        allow read, update: if isAdmin() || request.auth.uid == resource.data.userId;
        allow create: if request.auth.uid != null;
        // Allow users to list their own orders, and admins to list all orders
        allow list: if isAdmin() || request.auth.uid == request.query.filters.userId;
    }
  }
}
