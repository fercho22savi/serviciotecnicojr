rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to products for browsing
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }

    // Users can only manage their own documents
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Cart items can be managed by the owner
    match /users/{userId}/cart/{cartId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Wishlist items can be managed by the owner
    match /users/{userId}/wishlist/{wishlistId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Reviews can be created by authenticated users and read by anyone
    match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Orders can only be accessed by the user who created them or an admin
    match /orders/{orderId} {
      allow read, update: if request.auth != null && 
                          (request.resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      allow create: if request.auth != null;
    }

    // Allow admin full access to specific collections
    match /users/{userId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}